		</Style.Setters>
	</Style>-->

	<!--SmartTextBox-->
	<Style TargetType="TextBox" x:Key="dataTextBox">
		<Style.Setters>
			<Setter Property="Margin" Value="2" />
			<Setter Property="Height" Value="23" />
			<!--<Setter Property="Width" Value="160" />-->
		</Style.Setters>
	</Style>

	<Style TargetType="dxe:TextEdit" x:Key="dataTextBoxDev">
		<Style.Setters>
			<Setter Property="Margin" Value="2" />
			<Setter Property="Height" Value="23" />
		</Style.Setters>
	</Style>

	<!--RadComboBox-->
	<Style TargetType="dxe:ComboBoxEdit" x:Key="dxeComboBox">
		<Style.Setters>
			<Setter Property="Margin" Value="2" />
			<Setter Property="Height" Value="23" />
		</Style.Setters>
	</Style>


	<!--DateEdit-->
	<Style TargetType="dxe:DateEdit" x:Key="datePicker">
		<Style.Setters>
			<Setter Property="Margin" Value="2" />
			<Setter Property="Height" Value="23" />
		</Style.Setters>
	</Style>

	<!--SpinEdit-->
	<Style TargetType="dxe:SpinEdit" x:Key="dxeSpinEdit">
		<Style.Setters>
			<Setter Property="Margin" Value="2" />
			<Setter Property="Height" Value="23" />
		</Style.Setters>
	</Style>

</ResourceDictionary>
